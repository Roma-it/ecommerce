                    evt.preventDefault()
                    let sureDelete = confirm("Seguro desea eliminar el producto ??")
                    if (sureDelete) {
                        deleteSubmit.submit()
                    }
                })

            </script> -->
        </main>

        <%- include('../partials/footer')%>
</body>

</html>